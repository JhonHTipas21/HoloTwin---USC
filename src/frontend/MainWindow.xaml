<Window x:Class="HoloTwin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gemelo Digital" Height="720" Width="1280" Background="#FFF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/> <!-- Menú Lateral -->
            <ColumnDefinition Width="*"/>   <!-- Contenido Principal -->
        </Grid.ColumnDefinitions>

        <!-- Menú lateral -->
        <StackPanel Grid.Column="0" Background="#f5f5f5" VerticalAlignment="Stretch" Margin="0,0,10,0"
                    BorderBrush="#DDDDDD" BorderThickness="1">
            <TextBlock Text="Menu" FontWeight="Bold" FontSize="16" Margin="10"/>
            <Button Content="🏠 Iniciar" Margin="10" Height="40" Click="Iniciar_Click" 
                    Background="#4CAF50" BorderBrush="DarkGreen" BorderThickness="2" FontWeight="Bold" 
                    VerticalAlignment="Center"/>
            <Button Content="🔍 Ver Resultados" Margin="10" Height="40" Click="VerResultados_Click" 
                    Background="#2196F3" BorderBrush="DodgerBlue" BorderThickness="2" FontWeight="Bold" 
                    VerticalAlignment="Center"/>
            <Button Content="📡 Detener" Margin="10" Height="40" Click="Detener_Click" 
                    Background="#F44336" BorderBrush="DarkRed" BorderThickness="2" FontWeight="Bold" 
                    VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Contenido Principal -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="20">
            <TextBlock Text="Entorno de Holotwin" FontSize="26" FontWeight="Bold" />
            <TextBlock Text="Monitoreo y simulación del consumo energético de la sala de juegos de la Universidad Santiago de Cali"
                       FontSize="14" Foreground="Gray" Margin="0,4,0,20"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Primer Gráfico -->
                <lvc:CartesianChart x:Name="Chart1" Grid.Column="0" Height="200" Margin="10"/>
                <!-- Segundo Gráfico -->
                <lvc:CartesianChart x:Name="Chart2" Grid.Column="1" Height="200" Margin="10"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
